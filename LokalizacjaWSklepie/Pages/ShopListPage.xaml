<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LokalizacjaWSklepie.Pages.ShopListPage"
             Title="ShopListPage">
    <ScrollView>
    <VerticalStackLayout>
            <ListView x:Name="ShopsListView" ItemTapped="ShopsListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Name}" FontAttributes="Bold" />
                                <Label Text="{Binding City}" />
                                <Label Text="{Binding Street}" />
                                <Label Text="{Binding PostalCode}" />
                                <!-- Dodaj inne właściwości Shop, jakie chcesz wyświetlić -->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>