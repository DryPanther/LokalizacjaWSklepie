<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LokalizacjaWSklepie.MainPage"
             Title="Home">

    <StackLayout>
        <Label Text="Email"/>
        <Entry x:Name="Email"/>
        <Label Text="Hasło"/>
        <Entry x:Name="Password" IsPassword="True"/>
        <Button x:Name="Login" Clicked="Login_Clicked" Text="Zaloguj"/>
        <Button x:Name="Register" Clicked="Register_Clicked" Text="Zarejestruj"/>
    </StackLayout>

</ContentPage>
