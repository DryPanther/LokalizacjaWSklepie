<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LokalizacjaWSklepie.Pages.EditProductPage"
             Title="Edit Product">
    <StackLayout>
        <Label Text="Name:" />
        <Entry Text="{Binding Name}" />

        <Label Text="Base Price:" />
        <Entry Text="{Binding BasePrice}" />

        <Label Text="Barcode:" />
        <Entry Text="{Binding Barcode}" />

        <Label Text="Quantity Type:" />
        <Picker Title="Select Quantity Type" SelectedItem="{Binding QuantityType}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Szt</x:String>
                    <x:String>L</x:String>
                    <x:String>Kg</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Zapisz" Clicked="SaveChangesButton_Clicked" />
        <Button Text="UsuÅ„" Clicked="DeleteButton_Clicked" />
        <Button Text="Anuluj" Clicked="CancelButton_Clicked" />
    </StackLayout>
</ContentPage>